<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCUScanner.Pages.ScanBluetoothPage"
             xmlns:controls="clr-namespace:SCUScanner.Helpers"
                              
             Title="SCUScanner">
    <ContentPage.ToolbarItems  >
        <controls:HideableToolbarItem  IsVisible="False"  Text="{Binding Resources[ScanText]}" Command="{Binding Command}" Order="Primary" Priority="1"    />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>