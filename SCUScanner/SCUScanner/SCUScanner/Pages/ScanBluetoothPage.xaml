<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCUScanner.Pages.ScanBluetoothPage"
             xmlns:controls="clr-namespace:SCUScanner.Helpers"
                              
             Title="SCUScanner">
    <ContentPage.ToolbarItems  >
        <controls:HideableToolbarItem  IsVisible="{Binding IsVisible}"  Text="{Binding ResourcesEx[ScanText]}" Command="{Binding Command}" Order="Primary" Priority="1"    />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal" IsVisible="{Binding IsVisibleBlueToothTornOff}">
            <Label Text="{Binding Resources[BlueToothTornOffText]}" 
               />
            <Label Text=" " 
               />
            <Label Text="{Binding Resources[ScanText]}"  VerticalTextAlignment="End"
               />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>