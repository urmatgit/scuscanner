                    </OnPlatform>
                </Label.IsVisible>-->
            </Label>
            <Label x:Name="lblHintBluetoothIOSText"  Text="{Binding Resources[SetHintBluetoothIOSText]}">
                <!--<Label.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean">
                        <OnPlatform.iOS>true</OnPlatform.iOS>
                        <OnPlatform.Android>false</OnPlatform.Android>
                        <OnPlatform.WinPhone>false</OnPlatform.WinPhone>
                    </OnPlatform>
                </Label.IsVisible>-->
