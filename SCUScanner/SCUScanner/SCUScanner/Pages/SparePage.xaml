<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfImage="clr-namespace:Syncfusion.SfImageEditor.XForms;assembly=Syncfusion.SfImageEditor.XForms"
             x:Class="SCUScanner.Pages.SparePage">
    <ContentPage.Content>
        <sfImage:SfImageEditor x:Name="imgViewer" PanningMode="SingleFinger"  Source="{Binding Image1}"  >
            <sfImage:SfImageEditor.ToolbarSettings>
                <sfImage:ToolbarSettings IsVisible="false" />
            </sfImage:SfImageEditor.ToolbarSettings>
            
        </sfImage:SfImageEditor>
    </ContentPage.Content>
</ContentPage>