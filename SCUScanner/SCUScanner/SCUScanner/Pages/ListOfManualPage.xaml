<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCUScanner.Pages.ListOfManualPage"
             x:Name="manual">
  <ListView x:Name="MyListView"
            ItemsSource="{Binding Items}"
       
            CachingStrategy="RecycleElement">
            
    <!--Built in Cells-->
        <ListView.ItemTemplate >
            <DataTemplate>
                <ViewCell >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        
                    
                    
                        
                        <Label Margin="5,0,0,0" Grid.Column="0" Text="{Binding file}" VerticalOptions="Center"  HorizontalOptions="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer  Command="{Binding BindingContext.LabelCommand, Source={x:Reference Name=manual}}" CommandParameter="{Binding . }" NumberOfTapsRequired="1" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Image  Grid.Column="1" Margin="5,0,5,0"  Source="delete64.png"  WidthRequest="24" HeightRequest="24"  HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=manual}}" CommandParameter="{Binding . }" NumberOfTapsRequired="1" />
                            </Image.GestureRecognizers>

                        </Image>
                    </Grid>
                </ViewCell>
            </DataTemplate>
    </ListView.ItemTemplate>
    
    <!--Custom View Cells-->
    <!--
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout>
            <Label Text="{Binding Text}" 
                   Style="{DynamicResource ListItemTextStyle}" />
            <Label Text="{Binding Detail}" 
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    -->
  </ListView>
</ContentPage>
