<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SCUScanner.Helpers"
             x:Class="SCUScanner.Pages.DataDevicesListPage">
    <controls:ListViewEx x:Name="MyListView"
            ItemsSource="{Binding DevicesItems}"
             ItemClickCommand="{Binding SelectCommand}"
           HasUnevenRows = "true"
          >
            
    <!--Built in Cells-->
        <!--<controls:ListViewEx.ItemTemplate>
        <DataTemplate>
            <TextCell Text="{Binding .}" />
        </DataTemplate>
    </controls:ListViewEx.ItemTemplate>-->
    
    <!--Custom View Cells-->
    
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Margin="20,5,5,5" Padding="5">
            <Label Text="{Binding UnitName}"  FontSize="Large" FontAttributes="Bold"
                   Style="{DynamicResource ListItemTextStyle}" />
            <Label Text="{Binding SerialNo}" FontSize="Small"
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    
  </controls:ListViewEx>
</ContentPage>
